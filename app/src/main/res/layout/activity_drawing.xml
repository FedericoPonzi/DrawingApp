<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.informaticalab.drawingapp.DrawingActivity">

    <include layout="@layout/content_drawing"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menu_fab"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_expandDirection="left"
        fab:fab_addButtonColorNormal="@color/white"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/trash_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@android:color/darker_gray"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/trash" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/undo_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/sapienza"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/undo"/>



        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/redo_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/sapienza"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/redo" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</android.support.design.widget.CoordinatorLayout>
